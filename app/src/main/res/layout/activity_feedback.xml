<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Title -->
    <TextView
        android:id="@+id/feedbackTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We Value Your Feedback"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        />

    <!-- Description -->
    <TextView
        android:id="@+id/feedbackDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your feedback helps us improve. Please share your thoughts and feel free to upload an image."
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
       />

    <!-- Feedback Input -->
    <EditText
        android:id="@+id/feedbackInput"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:hint="Enter your feedback here"
      android:background="@drawable/rtback"
        android:padding="12dp"
        android:gravity="top"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:textSize="14sp"/>

    <!-- Add Image Button -->


    <!-- Post Button -->
    <Button
        android:id="@+id/postFeedbackButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/green"
        android:textColor="@color/white"/>
</LinearLayout>
